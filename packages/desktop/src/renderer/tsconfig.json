{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/renderer",
    "rootDir": "./",
    "target": "ES2020",
    "module": "esnext",
    "jsx": "react-jsx",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmit": false
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
