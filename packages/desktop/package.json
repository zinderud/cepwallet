{
  "name": "@cepwallet/desktop",
  "version": "0.1.0",
  "description": "CepWallet Desktop Application - Electron + React",
  "type": "module",
  "main": "dist/main/index.js",
  "preload": "dist/preload/index.js",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc --watch --project src/main/tsconfig.json",
    "dev:renderer": "webpack serve --mode development",
    "build": "npm run build:main && npm run build:renderer && npm run build:dist",
    "build:main": "tsc --project src/main/tsconfig.json",
    "build:preload": "tsc --project src/preload/tsconfig.json",
    "build:renderer": "webpack --mode production",
    "build:dist": "electron-builder",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@cepwallet/shared": "workspace:*",
    "@tauri-apps/api": "^2.8.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.5.0",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "concurrently": "^8.2.2",
    "css-loader": "^6.8.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.54.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.6.0",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "build": {
    "appId": "com.cepwallet.desktop",
    "productName": "CepWallet",
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.finance"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Finance"
    }
  }
}
