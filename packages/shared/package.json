{
  "name": "@cepwallet/shared",
  "version": "0.1.0",
  "description": "Shared TypeScript utilities, types, and helpers for CepWallet",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./types": "./dist/types/index.js",
    "./utils": "./dist/utils/index.js",
    "./crypto": "./dist/crypto/index.js",
    "./kohaku": "./dist/kohaku/index.js",
    "./rpc": "./dist/rpc/index.js"
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch --preserveWatchOutput",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "ethers": "^6.10.0",
    "bignumber.js": "^9.1.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.10.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "ethereum",
    "web3",
    "trezor",
    "hardware-wallet",
    "kohaku",
    "privacy"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/zinderud/cepwallet.git",
    "directory": "packages/shared"
  },
  "license": "GPL-3.0",
  "author": "CepWallet Contributors"
}
